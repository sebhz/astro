. $ASTRO_SH_LIB_PATH/util

equatorial_to_horizontal()
{
    _H=$1
    _phi=$2
    _delta=$3

    _A=$(echo "deg(atan2(s(rad($_H)), c(rad($_H))*s(rad($_phi)) - s(rad($_delta))/c(rad($_delta))*c(rad($_phi))))" | bc -l)
    _h=$(echo "deg(asin(s(rad($_phi))*s(rad($_delta)) + c(rad($_phi))*c(rad($_delta))*c(rad($_H))))" | bc -l)
    echo "$_A $_h"
}
